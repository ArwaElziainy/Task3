<mvc:View xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout" xmlns="sap.m" controllerName="Task3.controller.View1"  displayBlock="true">
	<App>
		<pages>
			<Page title="{i18n>title}">
				<content width="100%">
					
							<Toolbar height="auto">
							
										<FlexBox width="100%" alignContent="SpaceBetween" justifyContent="SpaceAround" alignItems="End" wrap="Wrap">
											<SearchField id="refNo" maxLength="3" placeholder="Refrence Number" tooltip="{i18n>worklistSearchTooltip}" liveChange=".onRefNo" width="250px"/>
							
											
											<Button class="go" text="Go" width="250px" press=".onGo"/>
											<Button class="editIcon" icon="sap-icon://create-form" tooltip="Create" press=".onCreate"/>
										
										</FlexBox>
									
							
							</Toolbar>
							<Table class="table" width="96%" id="table" items="{ path: 'SCHeaderSet>/SCHeaderSet', sorter: { path: 'ZdateSta', descending: false } }" noDataText="{worklistView>/tableNoDataText}" backgroundDesign="Solid" >
						
					
						<columns>
							<Column id="orderIdCol" hAlign="Center">
								<Text text="Reference Number" id="OrderID"/>
							</Column>
							<Column id="customerIdCol" hAlign="Center">
								<Text text="Status" id="CustomerID"/>
							</Column>
							<Column id="orderDateCol" hAlign="Center">
								<Text text="Date" id="OrderDate"/>
							</Column>
							<Column id="shipViaCol" hAlign="Center">
								<Text text="shift" id="Zshift"/>
							</Column>
						</columns>
						<items>
							<ColumnListItem type="Navigation" press=".onPress" vAlign="Middle">
								<cells>
									<ObjectIdentifier id="refNoText" title="{SCHeaderSet>ZdateSta}"/>
									<Text id="statusText" text="{SCHeaderSet>ZStatusSta}"/>
									<Text id="dateText" text="{SCHeaderSet>ZdateGluFru}"/>
									<Text id="shiftText" text="{SCHeaderSet>Zshift}"/>
								</cells>
							</ColumnListItem>
						</items>
					<customData>
					    <sap.ui.core:CustomData xmlns:sap.ui.core="sap.ui.core" key="w5g.dt.editable" value="false" id="__data8"/>
					</customData>
					</Table>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>